{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@backend/*": ["./src/*"],
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["src/**/*.ts", "../shared/src/cache.ts"],
    "exclude": ["node_modules", "dist", "package.json"]
}